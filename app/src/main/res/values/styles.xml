<resources>
    <style name="TittleStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_35sdp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/transparent</item>

    </style>
    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="ScoreStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="ScoreListStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">21dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="BackStyle">
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_marginLeft">@dimen/_12sdp</item>
        <item name="android:layout_marginBottom">@dimen/_7sdp</item>
        <item name="android:src">@drawable/previous1</item>
    </style>
    <style name="textStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@color/black</item>
    </style>
</resources>